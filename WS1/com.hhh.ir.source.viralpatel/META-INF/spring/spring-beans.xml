<!-- placed in WEB-INF folder -->
<!-- Contains bean definitions, by default, beans are singleton unless specified as prototype -->
<!-- http://stackoverflow.com/questions/4454209/when-is-a-spring-bean-instantiated -->

<!-- tag to inform that annotations are being used, so that the components are scanned -->
	<context:annotation-config />
	<context:component-scan base-package="net.viralpatel.contact" />

	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="classpath:messages" />
		<property name="defaultEncoding" value="UTF-8" />
	</bean>
	
	<!-- added to test if the exception "A null service reference is not allowed" will go away - in vain -->
    <osgi:reference id="httpServiceRef"
       interface="org.osgi.service.http.HttpService"/>


